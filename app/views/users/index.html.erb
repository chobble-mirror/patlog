<header>
  <h1>Users</h1>
</header>

<article>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Admin</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin? ? "Yes" : "No" %></td>
          <td>
            <%= link_to edit_user_path(user) do %><em>Edit</em><% end %>
            <% unless user == current_user %>
              <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
