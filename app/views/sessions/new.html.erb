<h2>Login</h2>

<%= form_with(scope: :session, url: login_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :remember_me %>
    <%= form.check_box :remember_me %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
